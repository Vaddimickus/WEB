@model IEnumerable<Category>

<h2>Категории</h2>

<div class="container">
    <div class="row">
        @{ foreach (Category category in Model) {
                <div class="col-sm">
                    <h4>@category.categoryName</h4>
                    <p>@category.desc</p>
                    <p><a class="btn btn-warning" href="~/Bicycles/List/@category.categoryName">Подробнее</a></p>
                </div>
            }
        }
    </div>
</div>